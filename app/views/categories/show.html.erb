<p id="notice"><%= notice %></p>
<h1>formulario</h1>

<%= form_with model:[@category, @product], local: true   do |x| %>

      <%= x.text_field :name %>
      <%= x.text_field :price %>
		  <%= x.submit "enviar", class:"btn btn-dark"  %>
	<% end %>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.products.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
